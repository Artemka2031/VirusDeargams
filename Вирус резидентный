// Финальная взаимодействие вируса с корректировкой
digraph {
	START [label="Запуск вирусного ПО"]
	RAM [label="Загрузка в ОЗУ"]
	CPU [label="CPU: Выполнение вируса"]
	ALU [label="АЛУ: Попытка загрузки"]
	PSW [label="PSW: Попытка изменения на режим ожидания"]
	CHK_ALU [label="Проверка загрузки АЛУ" shape=diamond]
	CHK_PSW [label="Проверка изменения PSW" shape=diamond]
	PM [label="Изменение памяти программ" shape=diamond]
	EM [label="Изменение памяти ошибок" shape=diamond]
	LOOP [label="Возврат к началу программы"]
	HANG [label="Система зависает" shape=parallelogram]
	START -> RAM [label="Запуск -> ОЗУ"]
	RAM -> CPU [label="ОЗУ -> CPU"]
	CPU -> ALU [label="CPU -> АЛУ"]
	ALU -> CHK_ALU [label="Проверка АЛУ"]
	CHK_ALU -> HANG [label="Успешно"]
	CHK_ALU -> PSW [label="Не успешно"]
	PSW -> CHK_PSW [label="Проверка PSW"]
	CHK_PSW -> PM [label="Не успешно"]
	PM -> EM [label="Не успешно"]
	EM -> LOOP [label="Не успешно"]
	LOOP -> START [label="Повтор"]
	CHK_PSW -> HANG [label="Успешно"]
	PM -> HANG [label="Успешно" constraint=false]
	EM -> HANG [label="Успешно" constraint=false]
}
